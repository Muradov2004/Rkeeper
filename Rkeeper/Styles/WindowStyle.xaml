<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CommonWindowStyle" TargetType="Window">
        
        <Setter Property="Title" Value="Rkepeer App"/>
        
        <Setter Property="Icon" Value="{StaticResource ApplicationIcon}"/>
        
        <Setter Property="Width" Value="800"/>
        
        <Setter Property="Height" Value="550"/>
        
        <Setter Property="MinWidth" Value="800"/>
        
        <Setter Property="MinHeight" Value="500"/>

        <Setter Property="Background" Value="{DynamicResource BackColor}"/>

    </Style>

</ResourceDictionary>