<Window x:Class="Rkeeper.View.OpeningLoadingView.Loding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rkeeper.View.OpeningLoadingView"
        mc:Ignorable="d"
        Title="Loding" Height="280" Width="500"   
        WindowStyle="None"
        ResizeMode="NoResize"
        Icon="../../Assets/IconImage/rkeeper.ico"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition/>
            <RowDefinition Height="100"/>

        </Grid.RowDefinitions>

        <MediaElement Source="pack://application:,,,/Rkeeper;component/Assets/Gifs/rkeeper.gif"/>

        <TextBlock Grid.Row="1" x:Name="folderNameText" FontSize="16" FontWeight="Bold" Margin="10,5" VerticalAlignment="Top" TextAlignment="Center"/>

        <ProgressBar Grid.Row="1" Name="LoadingBar" VerticalAlignment="Bottom" Height="30" Margin="10"/>

    </Grid>

</Window>
