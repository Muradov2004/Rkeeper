<UserControl x:Class="Rkeeper.View.Admin.LogfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rkeeper.View.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto"  HorizontalScrollBarVisibility="Auto">

            <TextBox Text="{Binding LogFileString}" IsReadOnly="True" FontSize="20" Margin="0,0,0,40" Background="Black" Foreground="White" />

        </ScrollViewer>

        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Back" Height="40" Width="150" Command="{Binding BackCommand}"/>

    </Grid>

</UserControl>
